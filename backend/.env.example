# Meeting Simulator Backend Configuration
# Copy this file to .env and fill in your values

# ====================
# CRITICAL SECURITY SETTINGS
# ====================

# SECRET_KEY: Used for JWT token signing - MUST BE SET IN PRODUCTION
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-minimum-32-characters-CHANGE-THIS

# OPENAI_API_KEY: Required for meeting simulations
OPENAI_API_KEY=sk-your-openai-api-key-here

# ====================
# APPLICATION SETTINGS
# ====================

APP_NAME=Meeting Simulator
APP_VERSION=1.0.0
DEBUG=False

# API Configuration
API_PREFIX=/api/v1

# CORS Origins (JSON array format)
# Add production URLs when deploying
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# ====================
# DATABASE
# ====================

# SQLite (default for development)
DATABASE_URL=sqlite:///./meeting_simulator.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/meeting_simulator

# ====================
# OPENAI SETTINGS
# ====================

OPENAI_MODEL=gpt-4o-mini
DEFAULT_TEMPERATURE=0.3

# LLM Settings
RECURSION_LIMIT=100
MAX_ITERATIONS=50
TIMEOUT_SECONDS=300

# ====================
# AUTHENTICATION
# ====================

ALGORITHM=HS256
# Token expires after 24 hours (1440 minutes) - reduced from 7 days for security
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ====================
# LOGGING
# ====================

LOG_LEVEL=INFO

# ====================
# FIREBASE (Optional - for future migration)
# ====================

FIREBASE_PROJECT_ID=
FIREBASE_CREDENTIALS_PATH=
